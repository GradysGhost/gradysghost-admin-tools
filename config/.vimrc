:set nu
:set ts=2
:set expandtab
:set autoindent

:color slate
:set cursorline
:set cursorcolumn
:set colorcolumn=+1
:hi CursorLine cterm=NONE ctermbg=black
:hi CursorColumn ctermbg=black guibg=darkgray

set sw=4
set foldmethod=indent
set foldnestmax=10
set nofoldenable
set foldlevel=1

set runtimepath^=~/.vim/bundle/numbers

